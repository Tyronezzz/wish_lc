class Solution {
    
private:
    int m, n;    
    
    void helper(vector<vector<char>>& island, int i, int j)
    {
        if(i<0 || i>=m || j<0 || j>=n || island[i][j] == '0')
            return;
    
        island[i][j] = '0';
        helper(island, i+1, j);
        helper(island, i, j+1);
        helper(island, i-1, j);
        helper(island, i, j-1);
    }
    
    
public:
    int numIslands(vector<vector<char>>& grid) {
        
        vector<vector<char>> island = grid;
        m = grid.size();
        if(m==0) return 0;
        n = grid[0].size();
        int count=0;
        
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(island[i][j] == '1')
                {
                    count++;
                    helper(island, i, j);
                }
                
            }
            
        }
        return count;
    }
};
